<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.umd.cmsc436.Level">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="edu.umd.cmsc436.Level.LevelActivity"
            android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="edu.umd.cmsc436.level.action.TRIAL" />
                <action android:name="edu.umd.cmsc436.level.action.PRACTICE" />
                <action android:name="edu.umd.cmsc436.level.action.HELP" />
                <action android:name="edu.umd.cmsc436.level.action.HISTORY" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>